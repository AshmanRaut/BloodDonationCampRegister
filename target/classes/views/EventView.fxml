<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EventController">
    <top>
        <VBox spacing="10" style="-fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Event Information" style="-fx-font-size: 14; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Event Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="eventNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Event Date:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <DatePicker fx:id="eventDatePicker" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Organizer:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="organizerField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                <Label text="Target Units:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Spinner fx:id="targetUnitsSpinner" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Add Event" onAction="#handleAddEvent" style="-fx-padding: 8px 16px;"/>
                <Button text="Update Event" onAction="#handleUpdateEvent" style="-fx-padding: 8px 16px;"/>
                <Button text="Delete Event" onAction="#handleDeleteEvent" style="-fx-padding: 8px 16px;"/>
                <Button text="Refresh" onAction="#handleRefresh" style="-fx-padding: 8px 16px;"/>
                <Button text="Clear" onAction="#handleClear" style="-fx-padding: 8px 16px;"/>
            </HBox>

            <HBox spacing="20">
                <Label fx:id="infoLabel" text="Ready" style="-fx-text-fill: #0066cc;"/>
                <Label fx:id="statisticsLabel" text="Statistics: -" style="-fx-text-fill: #009900;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL">
            <TableView fx:id="eventTable">
                <columns>
                    <TableColumn fx:id="idColumn" text="Event ID" prefWidth="80"/>
                    <TableColumn fx:id="eventNameColumn" text="Event Name" prefWidth="200"/>
                    <TableColumn fx:id="eventDateColumn" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="locationColumn" text="Location" prefWidth="150"/>
                    <TableColumn fx:id="targetUnitsColumn" text="Target Units" prefWidth="100"/>
                </columns>
            </TableView>

            <TableView fx:id="bloodUnitsTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="unitIdColumn" text="Unit ID" prefWidth="80"/>
                    <TableColumn fx:id="bloodGroupColumn" text="Blood Group" prefWidth="100"/>
                    <TableColumn fx:id="volumeColumn" text="Volume (ml)" prefWidth="100"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="150"/>
                </columns>
            </TableView>
        </SplitPane>
    </center>
</BorderPane>
