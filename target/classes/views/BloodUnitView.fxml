<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BloodUnitController">
    <top>
        <VBox spacing="10" style="-fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Blood Unit Information" style="-fx-font-size: 14; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Donor:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="donorCombo" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Event:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <ComboBox fx:id="eventCombo" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Blood Group:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="bloodGroupField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Volume (ml):" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Spinner fx:id="volumeSpinner" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                <Label text="Collection Date:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <DatePicker fx:id="collectionDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Expiry Date:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <DatePicker fx:id="expiryDatePicker" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                <Label text="Tested:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <CheckBox fx:id="testedCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <ComboBox fx:id="statusCombo" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Add Blood Unit" onAction="#handleAddBloodUnit" style="-fx-padding: 8px 16px;"/>
                <Button text="Update Blood Unit" onAction="#handleUpdateBloodUnit" style="-fx-padding: 8px 16px;"/>
                <Button text="Delete Blood Unit" onAction="#handleDeleteBloodUnit" style="-fx-padding: 8px 16px;"/>
                <Button text="Refresh" onAction="#handleRefresh" style="-fx-padding: 8px 16px;"/>
                <Button text="Clear" onAction="#handleClear" style="-fx-padding: 8px 16px;"/>
            </HBox>

            <HBox spacing="20">
                <Label fx:id="infoLabel" text="Ready" style="-fx-text-fill: #0066cc;"/>
                <Label fx:id="donorDetailsLabel" text="Select a donor" style="-fx-text-fill: #009900;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="bloodUnitTable">
            <columns>
                <TableColumn fx:id="unitIdColumn" text="Unit ID" prefWidth="80"/>
                <TableColumn fx:id="bloodGroupColumn" text="Blood Group" prefWidth="100"/>
                <TableColumn fx:id="volumeColumn" text="Volume (ml)" prefWidth="100"/>
                <TableColumn fx:id="collectionDateColumn" text="Collection Date" prefWidth="120"/>
                <TableColumn fx:id="expiryDateColumn" text="Expiry Date" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
